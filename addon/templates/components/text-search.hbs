{{#if auto}}
  {{#debounced-value val=filter wait=wait immediate=false sync=true as |dtValue|}}
    {{input value=dtValue placeholder=placeholder}}
  {{/debounced-value}}
{{else}}
  <input value={{internalValue}} placeholder={{placeholder}} oninput={{action (mut internalValue) value="target.value"}}>
  <button {{action (mut filter) internalValue}}>Search</button>
{{/if}}
